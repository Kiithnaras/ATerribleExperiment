<root>
	<windowclass name="ps_xp">
		<sheetdata>
			<genericcontrol name="sheetframe">
				<bounds>10,20,-20,-15</bounds>
				<disabled />
			</genericcontrol>
			
			<label>
				<anchored to="sheetframe" position="insidetop" offset="0,20" />
				<static textres="ps_label_party" />
				<center />
			</label>
			<windowlist name="list">
				<anchored to="sheetframe">
					<top offset="45" />
					<left offset="10" />
					<right offset="-20" />
					<bottom parent="" anchor="center" offset="-20" />
				</anchored>
				<frame name="groupbox" offset="5,10,15,10" />
				<datasource>.partyinformation</datasource>
				<class>ps_xp_partyentry</class>
				<sortby><control>name</control></sortby>
				<columns width="350" fillwidth="true" />
				<empty font="list-empty" gmtextres="ps_emptylistother" />
			</windowlist>
			<scrollbar_list />
		
			<windowlist name="encounters">
				<anchored to="sheetframe">
					<top parent="" anchor="center" offset="35" />
					<left offset="10" />
					<right parent="" anchor="center" offset="-10" />
					<bottom offset="-40" />
				</anchored>
				<frame name="groupbox" offset="5,10,15,10" />
				<footer>footer_narrow</footer>
				<datasource>.encounters</datasource>
				<class>ps_xp_encounterentry</class>
				<useallmodules />
				<child><backcolor>1A40301E</backcolor></child>
				<child></child>
				<filter control="encfilter" />
				<filteron control="name" />
				<empty font="list-empty" textres="ps_emptylistenc" />
				<script file="ps/scripts/ps_xp_enclist.lua" />
			</windowlist>
			<scrollbar>
				<anchored to="encounters" />
				<target>encounters</target>
			</scrollbar>

			<label>
				<anchored to="encounters" position="above" offset="0,20" />
				<static textres="ps_label_encounters" />
				<center />
			</label>
			<genericcontrol name="rightanchor_enc">
				<anchored to="encounters" position="aboveright" offset="0,25" height="0" width="0" />
			</genericcontrol>
			<genericcontrol name="idelete_header_enc">
				<anchored to="rightanchor_enc" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<disabled />
				<invisible />
			</genericcontrol>
			<label>
				<anchored to="rightanchor_enc" width="30" height="20">
					<top />
					<right anchor="left" relation="relative" offset="3" />
				</anchored>
				<static textres="ps_label_xpawarded" />
				<tooltip textres="ps_tooltip_xpawarded" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_enc" width="65" height="20">
					<top />
					<right anchor="left" relation="relative" offset="0" />
				</anchored>
				<static textres="ps_label_xp" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_enc" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<static textres="lvl" />
				<tooltip textres="level" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_enc" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
					<left parent="encounters" offset="30" />
				</anchored>
				<static textres="ps_label_xpname" />
				<center />
			</label>
			
			<genericcontrol name="rightanchor_encfilter">
				<anchored height="0" width="0">
					<top anchor="bottom" offset="-40" />
					<right parent="encounters" />
				</anchored>
			</genericcontrol>
			<button_iedit name="enc_iedit">
				<anchored to="rightanchor_encfilter">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<target>encounters</target>
			</button_iedit>
			<filter name="encfilter">
				<anchored to="sheetframe" position="insidebottomleft" offset="50,5" height="20">
					<right parent="rightanchor_encfilter" anchor="left" relation="relative" offset="-10" />
				</anchored>
			</filter>

			<windowlist name="quests">
				<anchored to="sheetframe">
					<top parent="" anchor="center" offset="35" />
					<left parent="" anchor="center" offset="10" />
					<right offset="-20" />
					<bottom offset="-40" />
				</anchored>
				<frame name="groupbox" offset="5,10,15,10" />
				<footer>footer_narrow</footer>
				<datasource>.quests</datasource>
				<class>ps_xp_questentry</class>
				<useallmodules />
				<allowcreate />
				<child><backcolor>1A40301E</backcolor></child>
				<child></child>
				<filter control="questfilter" />
				<filteron control="name" />
				<empty font="list-empty" textres="ps_emptylistquest" />
				<script file="ps/scripts/ps_xp_questlist.lua" />
			</windowlist>
			<scrollbar>
				<anchored to="quests" />
				<target>quests</target>
			</scrollbar>

			<label>
				<anchored to="quests" position="above" offset="0,20" />
				<static textres="ps_label_quests" />
				<center />
			</label>
			<genericcontrol name="rightanchor_quest">
				<anchored to="quests" position="aboveright" offset="0,25" height="0" width="0" />
			</genericcontrol>
			<genericcontrol name="idelete_header_quest">
				<anchored to="rightanchor_quest" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<disabled />
				<invisible />
			</genericcontrol>
			<label>
				<anchored to="rightanchor_quest" width="30" height="20">
					<top />
					<right anchor="left" relation="relative" offset="3" />
				</anchored>
				<static textres="ps_label_xpawarded" />
				<tooltip textres="ps_tooltip_xpawarded" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_quest" width="65" height="20">
					<top />
					<right anchor="left" relation="relative" offset="0" />
				</anchored>
				<static textres="ps_label_xp" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_quest" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<static textres="lvl" />
				<tooltip textres="level" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_quest" width="50" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<static textres="ps_label_xptype" />
				<center />
			</label>
			<label>
				<anchored to="rightanchor_quest" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
					<left parent="quests" offset="30" />
				</anchored>
				<static textres="ps_label_xpname" />
				<center />
			</label>
			
			<genericcontrol name="rightanchor_questfilter">
				<anchored height="0" width="0">
					<top anchor="bottom" offset="-40" />
					<right parent="quests" />
				</anchored>
			</genericcontrol>
			<button_iedit name="quests_iedit">
				<anchored to="rightanchor_questfilter">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<target>quests</target>
			</button_iedit>
			<button_iadd name="quests_iadd">
				<anchored to="rightanchor_questfilter">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<target>quests</target>
			</button_iadd>
			
			<filter name="questfilter">
				<anchored height="20">
					<left anchor="center" offset="50" />
					<bottom parent="sheetframe" offset="-5" />
					<right parent="rightanchor_questfilter" anchor="left" relation="relative" offset="-10" />
				</anchored>
			</filter>
		</sheetdata>
	</windowclass>

	<windowclass name="ps_xp_partyentry">
		<margins control="0,0,0,10" />
		<frame>partysheetentry</frame>
		<sheetdata>
			<hlink name="link">
				<script>
					function onValueChanged()
						window.portrait.update();
					end
				</script>
			</hlink>
			
			<portrait_base>
				<bounds>10,10,40,40</bounds>
			</portrait_base>
			<portrait name="portrait">
				<bounds>10,10,40,40</bounds>
			</portrait>

			<string_ps name="name">
				<anchored position="insidetopleft" offset="55,10" width="110" height="20" />
				<empty textres="char_emptyname" />
			</string_ps>
			<label>
				<anchored position="insidetopleft" offset="170,10" width="20" />
				<static textres="ps_label_partyentryxp" />
			</label>	
			<number_ps name="exp">
				<anchored position="insidetopleft" offset="195,10" width="65" height="20" />
			</number_ps>
			<label>
				<anchored position="insidetopleft" offset="260,10" width="10" height="20" />
				<static> / </static>
				<center />
			</label>	
			<number_ps name="expneeded">
				<anchored position="insidetopleft" offset="270,10" width="65" height="20" />
			</number_ps>

			<string_ps name="class">
				<anchored position="insidetopleft" offset="55,35" width="240" height="20" />
				<empty textres="ps_empty_class" />
			</string_ps>
			<number_ps name="level">
				<anchored position="insidetopleft" offset="305,35" width="30" height="20" />
			</number_ps>			
		</sheetdata>
	</windowclass>
	
	<windowclass name="ps_xp_encounterentry">
		<margins control="0,0,0,2" />
		<script file="ps/scripts/ps_xp_encentry.lua" />
		<sheetdata>
			<linkfield name="shortcut">
				<bounds>5,2,20,20</bounds>
			</linkfield>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<tabtarget prev="xpawarded" />
			</button_idelete>
			<button_checkbox name="xpawarded">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
				</anchored>
				<tabtarget next="idelete" prev="xp" />
			</button_checkbox>
			<basicnumber name="xp">
				<anchored width="65" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<hideonvalue>0</hideonvalue>
				<delaykeyupdate />
				<tabtarget next="xpawarded" prev="level" />
				<readonly />
			</basicnumber>
			<basicnumber name="level">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<hideonvalue>0</hideonvalue>
				<delaykeyupdate />
				<tabtarget next="xp" prev="type" />
				<readonly />
			</basicnumber>
			<basicstring name="name">
				<anchored>
					<top offset="2" />
					<left offset="30" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<tabtarget next="type" />
				<readonly />
			</basicstring>
		</sheetdata>
	</windowclass>
	
	<windowclass name="ps_xp_questentry">
		<margins control="0,0,0,2" />
		<script file="ps/scripts/ps_xp_questentry.lua" />
		<sheetdata>
			<linkcontrol name="shortcut">
				<bounds>5,2,20,20</bounds>
				<class>quest</class>
			</linkcontrol>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<tabtarget prev="xpawarded" />
			</button_idelete>
			<button_checkbox name="xpawarded">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
				</anchored>
				<tabtarget next="idelete" prev="xp" />
			</button_checkbox>
			<basicnumber name="xp">
				<anchored width="65" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<hideonvalue>0</hideonvalue>
				<delaykeyupdate />
				<tabtarget next="xpawarded" prev="level" />
			</basicnumber>
			<basicnumber name="level">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<hideonvalue>0</hideonvalue>
				<delaykeyupdate />
				<tabtarget next="xp" prev="type" />
			</basicnumber>
			<button_stringcycler name="type">
				<anchored width="50" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<tabtarget next="level" prev="name" />
				<parameters>
					<defaultlabelres>quest_label_typeminor</defaultlabelres>
					<labelsres>quest_label_typemajor</labelsres>
					<values>Major</values>
				</parameters>
			</button_stringcycler>

			<basicstring name="name">
				<anchored>
					<top offset="2" />
					<left offset="30" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<tabtarget next="type" />
			</basicstring>
		</sheetdata>
	</windowclass>
</root>
