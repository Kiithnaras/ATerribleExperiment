						<offset>2,2,2,2</offset>
					</keyedit>
				</stateframe>
				<font>sheetnumber</font>
				<default>6</default>
				<min>1</min>
				<max>10</max>
				<script>
					function onValueChanged()
						window.rolls.setRows(getValue());
					end

					function onInit()
						onValueChanged();
					end
				</script>
			</numbercontrol>
			<stringcontrol>
				<anchored>
					<to>rows</to>
					<position>lefthigh</position>
					<offset>3,6</offset>
				</anchored>
				<font>hotkey</font>
				<static>Roll</static>
			</stringcontrol>
			<stringcontrol>
				<anchored>
					<to>rows</to>
					<position>righthigh</position>
					<offset>3,6</offset>
				</anchored>
				<font>hotkey</font>
				<static>scores of</static>
			</stringcontrol>

			<numbercontrol name="dice">
				<anchored>
					<to>rows</to>
					<position>right</position>
					<offset>50,0</offset>
					<size>
						<width>28</width>
					</size>
				</anchored>
				<frame>
					<name>bonus</name>
					<offset>2,2,2,2</offset>
				</frame>
				<stateframe>
					<keyedit>
						<name>sheetfocus</name>
						<offset>2,2,2,2</offset>
					</keyedit>
				</stateframe>
				<font>sheetnumber</font>
				<default>3</default>
				<min>1</min>
				<max>5</max>
				<script>
					function onValueChanged()
						window.rolls.setDice(getValue());
						window.dropdice.checkValue();
					end

					function onInit()
						onValueChanged();
					end
				</script>
			</numbercontrol>
			<stringcontrol>
				<anchored>
					<to>dice</to>
					<position>righthigh</position>
					<offset>3,6</offset>
				</anchored>
				<font>hotkey</font>
				<static>dice, drop</static>
			</stringcontrol>

			<numbercontrol name="dropdice">
				<anchored>
					<to>dice</to>
					<position>right</position>
					<offset>54,0</offset>
					<size>
						<width>28</width>
					</size>
				</anchored>
				<frame>
					<name>bonus</name>
					<offset>2,2,2,2</offset>
				</frame>
				<stateframe>
					<keyedit>
						<name>sheetfocus</name>
						<offset>2,2,2,2</offset>
					</keyedit>
				</stateframe>
				<font>sheetnumber</font>
				<min>0</min>
				<script>
					function onValueChanged()
						local dice = window.dice.getValue();
						local value = getValue();
						
						if dice &lt; value+1 then
							setValue(dice-1);
						end
						
						window.rolls.updateTotals();
					end
					
					function checkValue()
						onValueChanged();
					end
				</script>
			</numbercontrol>
			<stringcontrol>
				<anchored>
					<to>dropdice</to>
					<position>righthigh</position>
					<offset>3,6</offset>
				</anchored>
				<font>hotkey</font>
				<static>and modify by</static>
			</stringcontrol>

			<numbercontrol name="modifier">
				<anchored>
					<to>dropdice</to>
					<position>right</position>
					<offset>73,0</offset>
					<size>
						<width>28</width>
					</size>
				</anchored>
				<frame>
					<name>bonus</name>
					<offset>2,2,2,2</offset>
				</frame>
				<stateframe>
					<keyedit>
						<name>sheetfocus</name>
						<offset>2,2,2,2</offset>
					</keyedit>
				</stateframe>
				<font>sheetnumber</font>
				<script>
					function onValueChanged()
						window.rolls.updateModifiers();
						window.rolls.updateTotals();
					end
				</script>
			</numbercontrol>

			<buttoncontrol>
				<anchored>
					<to>modifier</to>
					<position>righthigh</position>
					<offset>3,0</offset>
					<size>
						<width>33</width>
						<height>26</height>
					</size>
				</anchored>
				<icon>
					<normal>button_ctnextactor</normal>
					<pressed>button_ctnextactor_down</pressed>
				</icon>
				<tooltip>
					<text>Sort</text>
				</tooltip>
				<script>
					function onButtonPress()
						window.rolls.sortTotals();
					end
				</script>
			</buttoncontrol>
		</sheetdata>
	</windowclass>

