<root>
	<windowclass name="quest">
		<frame>referencepage</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<sharable />
		<minimize>minimized_item</minimize>
		<tooltip field="name" />
		<script>
			function onInit()
				local sNode = getDatabaseNode().getNodeName();
				DB.addHandler(sNode .. ".locked", "onUpdate", onLockChanged);
				onLockChanged();
			end
			function onClose()
				local sNode = getDatabaseNode().getNodeName();
				DB.removeHandler(sNode .. ".locked", "onUpdate", onLockChanged);
			end
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if content.subwindow then
					content.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>quest_header</class>
			</sub_record_header>

			<genericcontrol name="contentframe">
				<anchored>
					<top parent="header" anchor="bottom" offset="15" />
					<left offset="30" />
					<right offset="-45" />
					<bottom offset="-32" />
				</anchored>
				<frame name="groupbox" offset="20,17,24,17" />
			</genericcontrol>

			<subwindow_record name="content">
				<class>quest_stats</class>
				<activate />
			</subwindow_record>
			<scrollbar_record />
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>	
	</windowclass>

	<windowclass name="quest_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>ref_ability</class>
			</link_record_header>

			<string_record_name name="name">
				<anchored>
					<top offset="5"/>
					<left offset="35" />
					<right offset="-40" />
				</anchored>
			</string_record_name>

			<icon_record_locked name="hardlocked">
				<bounds>-25,5,20,20</bounds>
			</icon_record_locked>
			<button_record_locked name="locked">
				<bounds>-25,5,20,20</bounds>
			</button_record_locked>
		</sheetdata>
	</windowclass>

	<windowclass name="quest_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				
				type.setReadOnly(bReadOnly);
				level.setReadOnly(bReadOnly);
				xp.setReadOnly(bReadOnly);
				description.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="type_label">
				<static textres="quest_label_type" />
			</label_column>
			<button_stringcycler name="type">
				<anchored width="50">
					<left offset="97" />
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				</anchored>
				<font>reference-r</font>
				<parameters>
					<defaultlabelres>quest_label_typeminor</defaultlabelres>
					<labelsres>quest_label_typemajor</labelsres>
					<values>Major</values>
				</parameters>		
			</button_stringcycler>

			<label_column name="level_label">
				<static textres="level" />
			</label_column>
			<number_column name="level" />

			<label_column name="xp_label">
				<static textres="quest_label_xp" />
			</label_column>
			<number_column name="xp">
				<anchored width="65" />
			</number_column>
			
			<ft_columnh name="description" />
		</sheetdata>
	</windowclass>
</root>
