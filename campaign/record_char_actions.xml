<root>
	<windowclass name="charsheet_actions">
		<script file="campaign/scripts/char_actions.lua" />
		<sheetdata>
			<frame_char name="actionframe">
				<bounds>15,0,480,480</bounds>
			</frame_char>
			
			<subwindow name="actions">
				<anchored to="actionframe" position="over" offset="-8,-10">
					<bottom offset="-50" />
				</anchored>
				<activate />
				<class>char_actions_details</class>
			</subwindow>
			<scrollbar>
				<anchored to="actions" position="right" offset="-2,-4" width="20">
					<bottom offset="20" />
				</anchored>
				<target>actions</target>
			</scrollbar>

			<button_expand name="expand">
				<anchored to="actionframe" position="insidebottomleft" offset="25,15" width="20" height="20" />
				<target>actions,spellclasslist,levels,spells</target>
				<togglelevel>3</togglelevel>
			</button_expand>
			<button_collapse name="collapse">
				<anchored to="actionframe" position="insidebottomleft" offset="55,15" width="20" height="20" />
				<target>actions,spellclasslist,levels,spells</target>
				<togglelevel>3</togglelevel>
			</button_collapse>

			<label name="label_mode">
				<anchored to="actionframe" position="insidebottomleft" offset="90,15" />
				<static textres="spell_label_mode" />
			</label>
			<button_stringcycler name="spellmode">
				<anchored to="label_mode" position="righthigh" offset="10,0" width="80" />
				<parameters>
					<labelsres>spell_label_modeprep|spell_label_modecombat</labelsres>
					<values>preparation|combat</values>
					<defaultlabelres>spell_label_modestd</defaultlabelres>
				</parameters>
				<script>
					function onValueChanged()
						window.onModeChanged();
					end
				</script>
			</button_stringcycler>
			
			<label name="label_display">
				<anchored to="actionframe" position="insidebottomleft" offset="250,15" />
				<static textres="spell_label_display" />
			</label>
			<button_stringcycler name="spelldisplaymode">
				<anchored to="label_display" position="righthigh" offset="10,0" width="80" />
				<parameters>
					<labelsres>spell_label_displayaction</labelsres>
					<values>action</values>
					<defaultlabelres>spell_label_displaystd</defaultlabelres>
				</parameters>
				<script>
					function onValueChanged()
						window.onDisplayChanged();
					end
				</script>
			</button_stringcycler>
			
			<button_iedit name="actions_iedit">
				<anchored to="actionframe" position="insidebottomright" offset="15,15" />
				<tooltip textres="char_tooltip_actionedit" />
				<script>
					function onValueChanged()
						local bEditMode = (getValue() == 1);
						
						window.label_mode.setVisible(not bEditMode);
						window.spellmode.setVisible(not bEditMode);
						window.label_display.setVisible(not bEditMode);
						window.spelldisplaymode.setVisible(not bEditMode);
						if bEditMode then
							DB.setValue(window.getDatabaseNode(), "spellmode", "string", "standard");
							DB.setValue(window.getDatabaseNode(), "spelldisplaymode", "string", "");
						end
						window.spellclass_iadd.setVisible(bEditMode);
						window.weapon_iadd.setVisible(bEditMode);
						window.actions.subwindow.update();
					end
				</script>
			</button_iedit>
			<buttoncontrol name="spellclass_iadd">
				<anchored to="actions_iedit" position="lefthigh" offset="5,0" width="20" height="20" />
				<icon normal="button_star" pressed="button_star_down" />
				<tooltip textres="char_tooltip_actionaddspellclass" />
				<invisible />
				<script>
					function onButtonPress()
						window.actions.subwindow.addSpellClass();
					end
				</script>
			</buttoncontrol>
			<buttoncontrol name="weapon_iadd">
				<anchored to="spellclass_iadd" position="lefthigh" offset="5,0" width="20" height="20" />
				<icon normal="button_weapon" pressed="button_weapon_down" />
				<tooltip textres="char_tooltip_actionaddweapon" />
				<invisible />
				<script>
					function onButtonPress()
						window.actions.subwindow.addWeapon();
					end
				</script>
			</buttoncontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="char_actions_details">
		<script file="campaign/scripts/char_actions_details.lua" />
		<sheetdata>
			<genericcontrol name="dropcatcher">
				<anchored position="over" />
				<script>
					function onDrop(x, y, draginfo)
						return CharManager.onActionDrop(draginfo, window.getDatabaseNode());
					end
				</script>
			</genericcontrol>
			
			<genericcontrol name="icon_weapon">
				<anchored position="insidetopleft" offset="10,10" width="20" height="20" />
				<icon>char_weapon</icon>
			</genericcontrol>
			<label name="label_weapon">
				<anchored>
					<top offset="10" />
					<left parent="icon_weapon" anchor="right" offset="10" />
					<right offset="-8" />
				</anchored>
				<static textres="char_label_weapons" />
			</label>

			<genericcontrol>
				<bounds>6,6,-6,32</bounds>
				<frame name="groupbox2" offset="6,6,6,6" />
				<disabled />
			</genericcontrol>

			<label>
				<anchored position="insidetopleft" offset="10,45" />
				<center />
				<static textres="char_label_weaponname" />
			</label>
			<label>
				<anchored position="insidetopright" offset="323,45" width="29" />
				<center />
				<static textres="char_label_weapontype" />
			</label>
			<label>
				<anchored position="insidetopright" offset="290,45" width="30" />
				<center />
				<static textres="char_label_weaponnumatt" />
			</label>
			<label>
				<anchored position="insidetopright" offset="155,45" width="130"/>
				<center />
				<static textres="char_label_weaponattacks" />
			</label>
			<label>
				<anchored position="insidetopright" offset="45,45" width="105" />
				<center />
				<static textres="char_label_weapondamage" />
			</label>
			
			<list_charweapon name="weaponlist">
				<anchored>
					<top offset="60" />
					<left />
					<right />
				</anchored>
				<class>char_weapon</class>
				<noscroll />
			</list_charweapon>

			<list_spellclass name="spellclasslist">
				<anchored>
					<top parent="weaponlist" anchor="bottom" offset="5" />
					<left />
					<right />
				</anchored>
				<class>spell_class</class>
				<noscroll />
			</list_spellclass>
		</sheetdata>
	</windowclass>

	<windowclass name="char_weapon">
		<margins control="0,0,0,5" />
		<script file="campaign/scripts/char_weapon.lua" />
		<sheetdata>
			<!-- Overview -->
			<genericcontrol name="hanchor">
				<anchored width="0" height="0">
					<top />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_idelete>
			<linkfield name="shortcut">
				<anchored width="20" height="20">
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-2" />
				</anchored>
			</linkfield>
			<button_toggledetail name="activatedetail">
				<anchored>
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-3" />
				</anchored>
			</button_toggledetail>

			<genericcontrol name="damageframe">
				<anchored width="105" height="20">
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<frame name="slottedbonus" offset="5,5,5,5" />
			</genericcontrol>
			<diefield name="damagedice">
				<anchored to="damageframe" position="insidetopleft" width="63" height="20" />
				<script file="campaign/scripts/char_weapondamage.lua" />
			</diefield>
			<number_charweapondamagetotal name="damagetotalbonus">
				<anchored to="damageframe" position="insidetopright" width="43" height="20" />
			</number_charweapondamagetotal>
			
			<genericcontrol name="attackframe">
				<anchored width="130" height="20">
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<frame name="slottedmodifier" offset="5,5,5,5" />
			</genericcontrol>
			<number_charweaponattacktotal name="attack1">
				<anchored to="attackframe" position="insidetopleft" offset="3,0" width="27" height="20" />
				<modifier>0</modifier>
				<name>Attack 1</name>
				<source><name>attack1modifier</name><op>+</op></source>
			</number_charweaponattacktotal>
			<number_charweaponattacktotal name="attack2">
				<anchored to="attack1" position="right" offset="5,0" width="27" />
				<modifier>-5</modifier>
				<name>Attack 2</name>
				<source><name>attack2modifier</name><op>+</op></source>
			</number_charweaponattacktotal>
			<number_charweaponattacktotal name="attack3">
				<anchored to="attack2" position="right" offset="5,0" width="27" />
				<modifier>-10</modifier>
				<name>Attack 3</name>
				<source><name>attack3modifier</name><op>+</op></source>
			</number_charweaponattacktotal>
			<number_charweaponattacktotal name="attack4">
				<anchored to="attack3" position="right" offset="5,0" width="27" />
				<modifier>-15</modifier>
				<name>Attack 4</name>
				<source><name>attack4modifier</name><op>+</op></source>
			</number_charweaponattacktotal>
			<genericcontrol name="attackicons">
				<anchored width="30" height="20">
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<frame name="fielddark" offset="5,5,5,5" />
			</genericcontrol>
			<number_charweaponfullattack name="attacks">
				<anchored to="attackicons" position="over" />
			</number_charweaponfullattack>
			<state_charweapontype name="type">
				<anchored>
					<top offset="3" />
					<right parent="hanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<script>
					function onValueChanged()
						window.onTypeChanged();
					end
				</script>
			</state_charweapontype>

			<stringu name="name">
				<anchored position="insidetopleft" offset="5,5" height="20">
					<right parent="hanchor" anchor="left" relation="relative" offset="0" />
				</anchored>
			</stringu>
			
			<!-- Attack -->
			<label name="label_atkdetail">
				<anchored width="75">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weaponatkdetail" />
			</label>
			<cycler_ability name="attackstat">
				<anchored to="label_atkdetail" position="righthigh" width="40" />
				<script>
					function onValueChanged()
						window.onAttackChanged();
					end
				</script>
			</cycler_ability>
			<label name="label_atkplus">
				<anchored to="attackstat" position="righthigh" offset="5,0" />
				<static>+</static>
			</label>
			<basicnumber name="bonus">
				<anchored to="label_atkplus" position="righthigh" offset="5,0" width="20" height="20" />
				<hideonvalue>0</hideonvalue>
			</basicnumber>
			<genericcontrol name="attackmodframe">
				<anchored to="bonus" position="righthigh" offset="7,0" width="130" height="20" />
				<frame name="slottedmodifier" offset="5,5,5,5" />
			</genericcontrol>

			<number_charweaponattackmod name="attack1modifier">
				<anchored to="attackmodframe" position="insidetopleft" offset="3,0" width="27" height="20" />
			</number_charweaponattackmod>
			<number_charweaponattackmod name="attack2modifier">
				<anchored to="attack1modifier" position="right" offset="5,0" width="27" />
			</number_charweaponattackmod>
			<number_charweaponattackmod name="attack3modifier">
				<anchored to="attack2modifier" position="right" offset="5,0" width="27" />
			</number_charweaponattackmod>
			<number_charweaponattackmod name="attack4modifier">
				<anchored to="attack3modifier" position="right" offset="5,0" width="27" />
			</number_charweaponattackmod>
			
			<label name="label_critrange">
				<anchored width="65">
					<top parent="label_atkdetail" />
					<right offset="-35" />
				</anchored>
				<static textres="char_label_weaponcritrange" />
			</label>
			<basicnumber name="critatkrange">
				<anchored to="label_critrange" position="righthigh" width="20" height="20" />
				<default>20</default>
				<min>2</min>
				<max>20</max>
			</basicnumber>

			<!-- Damage -->
			<label name="label_dmgdetail">
				<anchored width="75">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weapondmgdetail" />
			</label>
			<basicdice name="damagedicedetail" source="damagedice">
				<anchored to="label_dmgdetail" position="righthigh" width="60" height="20" />
				<script>
					function onInit()
						super.onInit();
						registerMenuItem(Interface.getString("menu_dieclear"), "erase", 4);
					end
					
					function onMenuSelection(selection)
						if selection == 4 then
							reset();
						end
					end
					
					function onValueChanged()
						super.onValueChanged();
						
						window.onDamageChanged();
					end
				</script>
			</basicdice>
			<label name="label_dmgplus">
				<anchored to="damagedicedetail" position="righthigh" offset="5,0" />
				<static>+</static>
			</label>
			<cycler_ability name="damagestat1">
				<anchored to="label_dmgplus" position="righthigh" offset="5,0" width="40" />
				<script>
					function onValueChanged()
						window.onDamageChanged();
					end
				</script>
			</cycler_ability>
			<label name="label_dmgplus2">
				<anchored to="damagestat1" position="righthigh" offset="5,0" />
				<static>+</static>
			</label>
			<cycler_ability name="damagestat2">
				<anchored to="label_dmgplus2" position="righthigh" offset="5,0" width="40" />
				<parameters>
					<defaultlabelres>dash</defaultlabelres>
				</parameters>
				<script>
					function onValueChanged()
						window.onDamageChanged();
					end
				</script>
			</cycler_ability>
			<label name="label_dmgplus3">
				<anchored to="damagestat2" position="righthigh" offset="5,0" />
				<static>+</static>
			</label>
			<basicnumber name="damagebonus">
				<anchored to="label_dmgplus3" position="righthigh" offset="5,0" width="20" height="20" />
				<hideonvalue>0</hideonvalue>
				<script>
					function onValueChanged()
						window.onDamageChanged();
					end
				</script>
			</basicnumber>

			<label name="label_critmult">
				<anchored width="65">
					<top parent="label_dmgdetail" />
					<right offset="-35" />
				</anchored>
				<static textres="char_label_weaponcritmult" />
			</label>
			<basicnumber name="critdmgmult">
				<anchored to="label_critmult" position="righthigh" width="20" height="20" />
				<default>2</default>
				<min>1</min>
				<max>5</max>
			</basicnumber>

			<genericcontrol name="damageadjanchor">
				<anchored width="0" height="20">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="90" />
				</anchored>
				<disabled />
			</genericcontrol>
			<button_stringcycler name="damagemeleestatadj">
				<anchored to="damageadjanchor" position="insidetopleft" width="130" />
				<parameters>
					<defaultlabelres>char_label_weaponmelee1h</defaultlabelres>
					<labelsres>char_label_weaponmelee2h|char_label_weaponmeleeoh</labelsres>
					<values>2h|oh</values>
				</parameters>
				<script>
					function onValueChanged()
						window.onDamageChanged();
					end
				</script>
			</button_stringcycler>
			<button_stringcycler name="damagerangedstatadj">
				<anchored to="damageadjanchor" position="insidetopleft" width="130" />
				<parameters>
					<defaultlabelres>char_label_weaponrangednone</defaultlabelres>
					<labelsres>char_label_weaponrangedbow|char_label_weaponrangedsling|char_label_weaponrangedthrown|char_label_weaponrangedthrownoh</labelsres>
					<values>bow|sling|thrown|thrownoh</values>
				</parameters>
				<script>
					function onValueChanged()
						window.onDamageChanged();
						window.onTypeChanged();
					end
				</script>
			</button_stringcycler>
			<label name="damagemaxstatparen">
				<anchored to="damageadjanchor" position="insidetopleft" offset="135,0" />
				<static>(</static>
			</label>
			<basicnumber name="damagemaxstat">
				<anchored to="damagemaxstatparen" position="righthigh" offset="5,0" width="20" height="20" />
				<hideonvalue>0</hideonvalue>
				<min>0</min>
				<tooltip textres="char_tooltip_weaponmaxability" />
				<script>
					function onValueChanged()
						window.onDamageChanged();
					end
				</script>
			</basicnumber>
			<label name="damagemaxstatparen2">
				<anchored to="damagemaxstat" position="righthigh" offset="5,0"  />
				<static>)</static>
			</label>

			<label name="label_dmgtype">
				<anchored width="70">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weapondmgtype" />
			</label>
			<stringu name="damagetype">
				<anchored height="20">
					<top parent="label_dmgtype" />
					<left parent="label_dmgtype" anchor="right" offset="5" />
					<right offset="-15" />
				</anchored>
			</stringu>

			<!-- Miscellaneous -->
			<label name="label_properties">
				<anchored width="70">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weaponproperties" />
			</label>
			<stringu name="properties">
				<anchored height="20">
					<top parent="label_properties" />
					<left parent="label_properties" anchor="right" offset="5" />
					<right offset="-15" />
				</anchored>
			</stringu>

			<label name="label_range">
				<anchored width="70">
					<top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weaponrange" />
			</label>
			<basicnumber name="rangeincrement">
				<anchored to="label_range" position="righthigh" offset="-6,0" width="30" height="20" />
				<hideonvalue>0</hideonvalue>
				<min>0</min>
			</basicnumber>

			<label name="label_ammo">
				<anchored width="50">
					<top parent="label_range" />
					<left offset="130" />
				</anchored>
				<static textres="char_label_weaponammo" />
			</label>
			<basicnumber name="maxammo">
				<anchored to="label_ammo" position="righthigh" width="30" height="20" />
				<min>0</min>
				<max>50</max>
			</basicnumber>
			<state_charammocounter name="ammocounter">
				<anchored to="maxammo" position="righthigh" offset="3,0" />
			</state_charammocounter>
		</sheetdata>
	</windowclass>
</root>
