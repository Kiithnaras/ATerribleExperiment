<root>
	<windowclass name="referenceskill">
		<frame>referencepage</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<sheetdata>
			<sub_ref_header name="header">
				<class>ref_skill_header</class>
			</sub_ref_header>

			<sub_ref_content name="content">
				<class>ref_skill_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>
	
	<windowclass name="ref_skill_header">
		<margins control="0,0,0,7" />
		<sheetdata>
			<link_record_header>
				<class>referenceskill</class>
			</link_record_header>
			<string_record_name name="name">
				<anchored>
					<top offset="5"/>
					<left offset="40" />
					<right offset="-25" />
				</anchored>
				<static />
			</string_record_name>
		</sheetdata>
	</windowclass>
	
	<windowclass name="ref_skill_stats">
		<script>
			function onInit()
				local aLabel = {};

				table.insert(aLabel, ability.getValue());
				if trained.getValue() ~= 0 then
					table.insert(aLabel, "Trained only");
				end
				if armorcheckpenalty.getValue() ~= 0 then
					table.insert(aLabel, "Armor check penalty");
				end

				type_label.setValue("[" .. table.concat(aLabel, "; ") .. "]");
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<hs name="ability" />
			<hn name="trained" />
			<hn name="armorcheckpenalty" />
			
			<label name="type_label">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left />
					<right />
				</anchored>
				<font>reference-b-large</font>
			</label>

			<ft_columnh name="text">
				<readonly />
			</ft_columnh>
		</sheetdata>
	</windowclass>
</root>
