<root>
	<windowclass name="charsheet_languagelistitem">
		<sizelimits>
			<minimum>
				<height>20</height>
			</minimum>
		</sizelimits>
		<sheetdata>
			<string_textlistitem name="name">
				<anchored>
					<top />
					<left />
					<right />
				</anchored>
			</string_textlistitem>
		</sheetdata>
	</windowclass>

	<windowclass name="charsheet_notes">
		<placement>
			<size>
				<width>252</width>
				<height>611</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
			<!-- OVERVIEW -->
			<frame_char name="detailframe">
				<bounds>15,0,480,50</bounds>
			</frame_char>

			<string_labeled name="gender">
				<anchored>
					<to>detailframe</to>
					<position>insidetopleft</position>
					<offset>15,10</offset>
					<size>
						<width>50</width>
						<height>20</height>
					</size>
				</anchored>
				<label>gender</label>
			</string_labeled>
			<string_labeled name="age">
				<anchored>
					<to>gender</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<label>age</label>
			</string_labeled>
			<string_labeled name="height">
				<anchored>
					<to>age</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<label>height</label>
			</string_labeled>
			<string_labeled name="weight">
				<anchored>
					<to>height</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>50</width>
					</size>
				</anchored>
				<label>weight</label>
			</string_labeled>
			<string_labeled name="size">
				<anchored>
					<to>weight</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>60</width>
					</size>
				</anchored>
				<label>size</label>
			</string_labeled>
			<string_labeled name="alignment">
				<anchored>
					<to>size</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>80</width>
					</size>
				</anchored>
				<label>alignment</label>
			</string_labeled>
			<string_labeled name="deity">
				<anchored>
					<to>alignment</to>
					<position>right</position>
					<offset>5,0</offset>
					<size>
						<width>80</width>
					</size>
				</anchored>
				<label>deity</label>
			</string_labeled>

			<!-- APPEARANCE -->
			<frame_char name="appearanceframe">
				<bounds>15,50,320,180</bounds>
			</frame_char>
			<label_sm name="appearancelabel">
				<anchored>
					<to>appearanceframe</to>
					<position>insidetop</position>
					<offset>0,9</offset>
				</anchored>
				<static>Appearance</static>
				<center />
			</label_sm>
			<stringu name="appearance">
				<anchored>
					<to>appearanceframe</to>
					<position>over</position>
					<offset>-15,-15</offset>
					<top>
						<offset>30</offset>
					</top>
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_charlist>
				<anchored>
					<to>appearance</to>
				</anchored>
				<target>appearance</target>
			</scrollbar_charlist>

			<!-- LANGUAGES -->
			<frame_char name="languageframe">
				<bounds>335,50,160,180</bounds>
			</frame_char>
			<label name="languagelabel">
				<anchored>
					<to>languageframe</to>
					<position>insidetop</position>
					<offset>0,10</offset>
				</anchored>
				<static>Languages</static>
				<center />
			</label>
			<list_text name="languagelist">
				<anchored>
					<to>languageframe</to>
					<position>over</position>
					<offset>-15,-15</offset>
					<top>
						<offset>30</offset>
					</top>
				</anchored>
				<datasource>.languagelist</datasource>
				<class>charsheet_languagelistitem</class>
				<sortby><control>name</control></sortby>
				<newfocus>name</newfocus>
				<allowcreate />
				<allowdelete />
			</list_text>
			<scrollbar_charlist>
				<anchored>
					<to>languagelist</to>
				</anchored>
				<target>languagelist</target>
			</scrollbar_charlist>

			<!-- NOTES -->
			<frame_char name="notesframe">
				<bounds>15,230,480,250</bounds>
			</frame_char>
			<stringcontrol name="noteslabel">
				<anchored>
					<to>notesframe</to>
					<position>insidetop</position>
					<offset>0,9</offset>
				</anchored>
				<font>sheetlabelsmall</font>
				<static>Notes</static>
				<center />
			</stringcontrol>
			<stringu name="notes">
				<anchored>
					<to>notesframe</to>
					<position>over</position>
					<offset>-15,-15</offset>
					<top>
						<offset>30</offset>
					</top>
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_charlist>
				<anchored>
					<to>notes</to>
				</anchored>
				<target>notes</target>
			</scrollbar_charlist>
		</sheetdata>
	</windowclass>
</root>
